class Customers:
    def __init__(self, name, surname, contact, id, address):
        self.name = name
        self.surname = surname
        self.contact = contact
        self.id = id
        self.address = address

    def get_name(self):
        return self.name

    def set_name(self, name):
        self.name = name

    def get_surname(self):
        return self.surname

    def set_surname(self, surname):
        self.email = surname

    def get_contact(self):
        return self.contact

    def set_contact(self, contact):
        self.phone = contact
        
    def get_id(self):
        return self.id

    def set_id(self, id):
        self.name = id
        
    def get_address(self):
        return self.address

    def set_address(self, address):
        self.name = address
        
